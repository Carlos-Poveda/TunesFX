<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="549.0" prefWidth="664.0" style="-fx-background-color: #3D3D3D;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.tunesfx.ChannelRackController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="14.0" layoutY="14.0" prefHeight="520.0" prefWidth="635.0" style="-fx-background-color: #262626; -fx-background-radius: 13; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 5, 0.5, 1, 1);">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <children>
                <Label text="Channel rack" textFill="#aeae00">
                    <font>
                        <Font name="OCR A Extended" size="15.0" />
                    </font>
                    <effect>
                        <Glow />
                    </effect>
                </Label>

                <VBox prefHeight="474.0" prefWidth="651.0" spacing="10">
                    <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="11.0" prefWidth="676.0" spacing="10" style="-fx-background-color: #262626; -fx-padding: 10;">
                            <children>
                                <Button fx:id="btnEncenderRitmo" mnemonicParsing="false" onAction="#handlePlayRitmo" prefHeight="38.0" prefWidth="31.0" style="-fx-background-color: #424242;">
                                    <graphic>
                                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../../../images/boton-de-play.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <effect>
                                        <Glow />
                                    </effect>
                                </Button>
                                <Button fx:id="btnNuevaPista" mnemonicParsing="false" onAction="#addSample" prefHeight="38.0" prefWidth="167.0" style="-fx-text-fill: white; -fx-background-color: #424242;" text="NEW SAMPLE">
                                    <font>
                                        <Font name="OCR A Extended" size="12.0" />
                                    </font>
                                    <effect>
                                        <Glow />
                                    </effect>
                                </Button>
                                <HBox alignment="CENTER" prefHeight="38.0" prefWidth="146.0" style="-fx-background-color: #424242; -fx-background-radius: 10;">
                                    <HBox.margin>
                                        <Insets left="180.0" />
                                    </HBox.margin>
                                    <children>
                                        <Label prefHeight="38.0" prefWidth="22.0" text="BPM" textFill="WHITE">
                                            <font>
                                                <Font name="OCR A Extended" size="20.0" />
                                            </font>
                                            <HBox.margin>
                                                <Insets right="7.0" />
                                            </HBox.margin>
                                        </Label>
                                        <Spinner fx:id="spinnerBPM" />
                                    </children>
                                    <padding>
                                        <Insets left="10.0" right="10.0" />
                                    </padding>
                                    <effect>
                                        <Glow />
                                    </effect>
                                </HBox>
                            </children>
                        </HBox>

                        <ScrollPane fitToWidth="false" hbarPolicy="AS_NEEDED" maxHeight="1.7976931348623157E308" prefHeight="402.0" prefWidth="582.0" vbarPolicy="AS_NEEDED">
                            <content>
                                <VBox fx:id="rackContainer" spacing="5" />
                            </content>
                        </ScrollPane>

                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</Pane>
