<?xml version="1.0" encoding="UTF-8"?>

<?import org.example.tunesfx.Oscilator?>
<?import org.example.tunesfx.WaveViewer?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<Pane prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: black;"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.tunesfx.SintetizadorController">
    <children>
        <!-- Osciladores -->
        <Oscilator fx:id="oscilador1" layoutX="15.0" layoutY="10.0" />
        <Oscilator fx:id="oscilador2" layoutX="15.0" layoutY="75.0" />
        <Oscilator fx:id="oscilador3" layoutX="15.0" layoutY="140.0" />
        <Oscilator fx:id="oscilador4" layoutX="15.0" layoutY="205.0" />
        <Oscilator fx:id="oscilador5" layoutX="15.0" layoutY="270.0" />

        <!-- WaveViewer -->
        <WaveViewer fx:id="waveViewer" layoutX="440.0" layoutY="10.0" />

        <!-- Panel de Filtro -->
        <VBox layoutX="440.0" layoutY="340.0" spacing="10" style="-fx-background-color: #1a1a1a; -fx-border-color: #333; -fx-border-width: 1; -fx-padding: 10;" prefWidth="200">
            <Label text="FILTER" textFill="white" style="-fx-font-weight: bold;"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <ToggleButton fx:id="filterToggleButton" text="On/Off" textFill="white" style="-fx-background-color: #333;"/>
                <ComboBox fx:id="filterTypeCombo" prefWidth="120"/>
            </HBox>

            <VBox spacing="5">
                <Label text="Cutoff Frequency" textFill="white"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Slider fx:id="filterCutoffSlider" prefWidth="150"/>
                    <Label fx:id="filterCutoffLabel" text="1000 Hz" textFill="white" minWidth="60"/>
                </HBox>
            </VBox>

            <VBox spacing="5">
                <Label text="Resonance" textFill="white"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Slider fx:id="filterResonanceSlider" prefWidth="150"/>
                    <Label fx:id="filterResonanceLabel" text="0.50" textFill="white" minWidth="40"/>
                </HBox>
            </VBox>
        </VBox>

        <!-- Panel de LFO -->
        <VBox layoutX="660.0" layoutY="340.0" spacing="10" style="-fx-background-color: #1a1a1a; -fx-border-color: #333; -fx-border-width: 1; -fx-padding: 10;" prefWidth="200">
            <Label text="LFO" textFill="white" style="-fx-font-weight: bold;"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <ToggleButton fx:id="lfoToggleButton" text="On/Off" textFill="white" style="-fx-background-color: #333;"/>
            </HBox>

            <VBox spacing="5">
                <Label text="Waveform" textFill="white"/>
                <ComboBox fx:id="lfoWaveformCombo" prefWidth="150"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Target" textFill="white"/>
                <ComboBox fx:id="lfoTargetCombo" prefWidth="150"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Rate" textFill="white"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Slider fx:id="lfoRateSlider" prefWidth="150"/>
                    <Label fx:id="lfoRateLabel" text="1.0 Hz" textFill="white" minWidth="50"/>
                </HBox>
            </VBox>

            <VBox spacing="5">
                <Label text="Amount" textFill="white"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Slider fx:id="lfoAmountSlider" prefWidth="150"/>
                    <Label fx:id="lfoAmountLabel" text="0.50" textFill="white" minWidth="40"/>
                </HBox>
            </VBox>
        </VBox>

        <!-- BotÃ³n Guardar Sample -->
        <Button fx:id="guardarSample" layoutX="15.0" layoutY="335.0" text="Save Sample"
                style="-fx-background-color: #333; -fx-text-fill: white;" prefWidth="120"/>
    </children>
</Pane>