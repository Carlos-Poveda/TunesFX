<?xml version="1.0" encoding="UTF-8"?>

<?import org.example.tunesfx.Oscilator?>
<?import org.example.tunesfx.WaveViewer?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<Pane prefHeight="500.0" prefWidth="850.0" style="-fx-background-color: black;"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.tunesfx.SintetizadorController">
    <children>
        <!-- Osciladores existentes -->
        <Oscilator fx:id="oscilador1" layoutX="15.0" layoutY="10.0" />
        <Oscilator fx:id="oscilador2" layoutX="15.0" layoutY="75.0" />
        <Oscilator fx:id="oscilador3" layoutX="15.0" layoutY="140.0" />
        <Oscilator fx:id="oscilador4" layoutX="15.0" layoutY="205.0" />
        <Oscilator fx:id="oscilador5" layoutX="15.0" layoutY="270.0" />
        <Button fx:id="guardarSample" layoutX="15.0" layoutY="335.0" text="Save Sample"
                style="-fx-background-color: #444; -fx-text-fill: white;"/>

        <!-- WaveViewer -->
        <WaveViewer fx:id="waveViewer" layoutX="440.0" layoutY="10.0" />

        <!-- NUEVO: Panel de Filtro -->
        <VBox layoutX="440.0" layoutY="340.0" spacing="10"
              style="-fx-border-color: #666; -fx-border-width: 1; -fx-padding: 10; -fx-background-color: #222;">
            <Label text="FILTER" style="-fx-font-weight: bold; -fx-text-fill: #fff; -fx-font-size: 14;"/>

            <HBox spacing="15" alignment="CENTER_LEFT">
                <CheckBox fx:id="filterEnableCheckbox" text="Enable"
                          style="-fx-text-fill: #fff;"/>
                <VBox spacing="5">
                    <Label text="Type" style="-fx-text-fill: #ccc;"/>
                    <ComboBox fx:id="filterTypeComboBox" prefWidth="120"
                              style="-fx-background-color: #444; -fx-text-fill: white;"/>
                </VBox>
            </HBox>

            <HBox spacing="20" alignment="CENTER_LEFT">
                <VBox spacing="5">
                    <Label text="Cutoff Frequency" style="-fx-text-fill: #ccc;"/>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Slider fx:id="filterCutoffSlider" prefWidth="150"
                                style="-fx-background-color: #333;"/>
                        <Label fx:id="filterCutoffLabel" text="1000 Hz"
                               style="-fx-text-fill: #ccc; -fx-min-width: 70;"/>
                    </HBox>
                </VBox>

                <VBox spacing="5">
                    <Label text="Resonance" style="-fx-text-fill: #ccc;"/>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Slider fx:id="filterResonanceSlider" prefWidth="150"
                                style="-fx-background-color: #333;"/>
                        <Label fx:id="filterResonanceLabel" text="1.0"
                               style="-fx-text-fill: #ccc; -fx-min-width: 40;"/>
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </children>
</Pane>